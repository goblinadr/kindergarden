<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="kindergarden.entity.Child" table="kindergarden.child">
		<meta attribute="class-description">Child detail</meta>
		<id column="child_id" name="id" type="integer">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="name" />
		<property name="surname" type="string" column="surname" />
		<property name="dateOfBurth" type="date" column="burth_date" />
		<property name="groupId" type="integer" column="group_id"/>

	</class>
</hibernate-mapping>
